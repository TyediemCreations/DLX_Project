
public class ColumnHeader extends DancingLink{
	private int column,size;
	//constructor for special 'columnHeader' link
	public ColumnHeader(int column){
		this.column = column;
		row = -1;

		left = null;
		right = null;
		up = null;
		down = null;
		columnHeader = null;
	}
	public int getColumn(){return column;}
	public int getSize(){return size;}

	public void updateSize(){
		
	}
	public String strFormatLink(){
		String coord;
		coord = "("+column+")";
		return coord;
	}

}
